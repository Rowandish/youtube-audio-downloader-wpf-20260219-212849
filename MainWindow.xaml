<Window x:Class="YoutubeAudioDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="YouTube Audio Downloader"
        Width="1180"
        Height="780"
        MinWidth="980"
        MinHeight="680"
        Background="#090C11"
        FontFamily="Segoe UI Variable Text">
    <Window.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#161A22" />
        <SolidColorBrush x:Key="CardBorderBrush" Color="#2A3140" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F3F6FD" />
        <SolidColorBrush x:Key="TextMutedBrush" Color="#A0A9BC" />
        <SolidColorBrush x:Key="AccentBrush" Color="#6DB5FF" />
        <SolidColorBrush x:Key="DangerBrush" Color="#F07474" />

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="16" />
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Background" Value="#121722" />
            <Setter Property="BorderBrush" Value="#30394C" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,9" />
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Height" Value="42" />
        </Style>

        <Style x:Key="AppComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Background" Value="#121722" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#27334A" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#33496C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AppComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Background" Value="#121722" />
            <Setter Property="BorderBrush" Value="#30394C" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Height" Value="42" />
            <Setter Property="ItemContainerStyle" Value="{StaticResource AppComboBoxItemStyle}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="ControlBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="38" />
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      IsHitTestVisible="False" />

                                    <Grid Grid.Column="1">
                                        <Path Data="M 0 0 L 5 6 L 10 0"
                                              Stroke="{StaticResource TextMutedBrush}"
                                              StrokeThickness="1.4"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                                    </Grid>
                                </Grid>
                            </Border>

                            <ToggleButton Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent" />
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Margin="0,6,0,0"
                                        Background="#121722"
                                        BorderBrush="#30394C"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="4">
                                    <ScrollViewer MaxHeight="260">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="ControlBorder" Property="BorderBrush" Value="#4A628D" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ControlBorder" Property="BorderBrush" Value="#3A4C6D" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ControlBorder" Property="Opacity" Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#08111C" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="18,10" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Background" Value="#242D3E" />
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Foreground" Value="#24090B" />
            <Setter Property="Background" Value="{StaticResource DangerBrush}" />
        </Style>

        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Trigger>
                <Trigger Property="Text" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0D12" Offset="0" />
                <GradientStop Color="#0D1320" Offset="0.6" />
                <GradientStop Color="#111A2A" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>

        <Grid Margin="28,24,28,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="YouTube Audio Downloader"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="30"
                           FontWeight="SemiBold" />
                <TextBlock Margin="0,6,0,0"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="13"
                           Text="Scarica audio MP3 da URL YouTube in modo asincrono, con progress dettagliato e controllo completo." />
            </StackPanel>

            <Border Grid.Column="1"
                    Padding="14,10"
                    CornerRadius="12"
                    Background="#101725"
                    BorderBrush="#293246"
                    BorderThickness="1"
                    VerticalAlignment="Center">
                <TextBlock Foreground="{StaticResource TextMutedBrush}"
                           FontSize="12"
                           Text="{Binding StatusMessage}" />
            </Border>
        </Grid>

        <Border Grid.Row="1"
                Margin="28,22,28,18"
                Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="220" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Margin="0,0,0,8"
                           Foreground="{StaticResource TextMutedBrush}"
                           Text="URL video YouTube (puoi incollare piÃ¹ URL separati da spazio o a capo)" />

                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Grid.ColumnSpan="3"
                         Style="{StaticResource InputTextBoxStyle}"
                         Text="{Binding UrlInput, UpdateSourceTrigger=PropertyChanged}" />

                <Button Grid.Row="1"
                        Grid.Column="3"
                        Margin="12,0,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding AddUrlCommand}"
                        Content="Aggiungi URL" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Margin="0,14,0,8"
                           Foreground="{StaticResource TextMutedBrush}"
                           Text="Cartella output MP3" />

                <TextBlock Grid.Row="2"
                           Grid.Column="2"
                           Margin="12,14,0,8"
                           Foreground="{StaticResource TextMutedBrush}"
                           Text="Qualita" />

                <TextBox Grid.Row="3"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Style="{StaticResource InputTextBoxStyle}"
                         Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}" />

                <Button Grid.Row="3"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding BrowseOutputDirectoryCommand}"
                        Content="Sfoglia" />

                <ComboBox Grid.Row="3"
                          Grid.Column="2"
                          Margin="12,0,0,0"
                          Style="{StaticResource AppComboBoxStyle}"
                          ItemsSource="{Binding QualityOptions}"
                          SelectedItem="{Binding SelectedQuality}"
                          TextSearch.TextPath="Label"
                          DisplayMemberPath="Label" />

                <Button Grid.Row="3"
                        Grid.Column="3"
                        Margin="12,0,0,0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RemoveSelectedCommand}"
                        Content="Rimuovi selezionato" />
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Margin="28,0,28,18"
                Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Foreground="{StaticResource TextMutedBrush}"
                           FontSize="13"
                           Text="Coda download" />

                <ListBox Grid.Row="1"
                         Margin="0,12,0,0"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding Items}"
                         SelectedItem="{Binding SelectedItem}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10"
                                    Padding="14"
                                    Background="#0E1420"
                                    BorderBrush="#283044"
                                    BorderThickness="1"
                                    CornerRadius="12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Text="{Binding Url}"
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Url}" />

                                    <StackPanel Grid.Row="1"
                                                Margin="0,8,0,8"
                                                Orientation="Horizontal">
                                        <TextBlock Foreground="{StaticResource TextMutedBrush}"
                                                   FontSize="12"
                                                   Text="Stato: " />
                                        <TextBlock FontSize="12"
                                                   Text="{Binding State}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding State}" Value="Completed">
                                                            <Setter Property="Foreground" Value="#8BD4B1" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State}" Value="Downloading">
                                                            <Setter Property="Foreground" Value="#6DB5FF" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State}" Value="Failed">
                                                            <Setter Property="Foreground" Value="#F07474" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State}" Value="Stopped">
                                                            <Setter Property="Foreground" Value="#F1BC77" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Margin="16,0,0,0"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   FontSize="12"
                                                   Text="{Binding StatusMessage}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="2">
                                        <ProgressBar Maximum="100"
                                                     Height="12"
                                                     Foreground="{StaticResource AccentBrush}"
                                                     Background="#0E131D"
                                                     Value="{Binding Progress}" />
                                        <TextBlock Margin="0,6,0,0"
                                                   Style="{StaticResource ErrorTextStyle}"
                                                   Foreground="#F28C8C"
                                                   FontSize="11"
                                                   TextWrapping="Wrap"
                                                   Text="{Binding ErrorMessage}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Row="3"
                Margin="28,0,28,18"
                Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,24,0">
                    <TextBlock Foreground="{StaticResource TextMutedBrush}"
                               FontSize="13"
                               Text="Progresso totale" />
                    <ProgressBar Margin="0,8,0,0"
                                 Maximum="100"
                                 Height="14"
                                 Foreground="{StaticResource AccentBrush}"
                                 Background="#0E131D"
                                 Value="{Binding OverallProgress, Mode=OneWay}" />
                    <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                        <TextBlock Foreground="{StaticResource TextPrimaryBrush}" Text="{Binding ProcessedSummary}" />
                        <TextBlock Margin="14,0,0,0" Foreground="{StaticResource TextMutedBrush}" Text="Tempo trascorso:" />
                        <TextBlock Margin="6,0,0,0" Foreground="{StaticResource TextPrimaryBrush}" Text="{Binding ElapsedTime}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Margin="0,0,12,0"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding StartDownloadsCommand}"
                            Content="Avvia download" />
                    <Button Style="{StaticResource DangerButtonStyle}"
                            Command="{Binding StopDownloadsCommand}"
                            Content="Stop" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="4"
                Margin="28,0,28,24"
                Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Foreground="{StaticResource TextMutedBrush}"
                               FontSize="13"
                               Text="Errori" />
                    <Button Grid.Column="1"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ClearErrorsCommand}"
                            Content="Pulisci"
                            Height="32"
                            MinWidth="80"
                            Padding="14,4" />
                </Grid>

                <ScrollViewer Grid.Row="1" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Errors}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Margin="0,0,0,8"
                                           Foreground="#F28C8C"
                                           FontSize="12"
                                           TextWrapping="Wrap"
                                           Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
